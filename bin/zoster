#!/usr/bin/env node
var exec = require("../exec");
var argv = require("optimist")
  .options('neutron', {
    default: false,
    describe: "run zoster electron less"
  })
  .options('test', {
    default: null,
    decribe: "run zoster test from command-line"
  })
  .argv;

var options = {
  neutron: argv.neutron,
  test: argv.test
}

if(options.test) {
  var caps = require(__dirname+'/../'+options.test);
  // TODO - validate test capabilitis
  options.caps = caps;
}
exec(options);
